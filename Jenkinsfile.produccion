pipeline {
  agent any

  tools {
    maven 'maven 3.9.9'
  }

  stages {
    stage('Build') {
      when {
        environment name: 'GIT_BRANCH', value: 'origin/main'
      }

      steps {
        // war-example-0.0.1.war
        sh 'mvn -B -q -DaltDeploymentRepository=nexus-releases::http://nexus:8081/nexus/content/repositories/releases clean deploy'
      }
    }
  }
}
